{
  "name": "aidonic",
  "version": "0.1.0",
  "private": true,
  "description": "Aid Distribution Dashboard - Web and Mobile Applications",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:server": "cd server && npm start",
    "dev:server:install": "cd server && npm install",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "get-ip": "node scripts/get-ip.js",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:web": "turbo run dev --filter=@aidonic/web",
    "dev:mobile": "turbo run dev --filter=@aidonic/mobile",
    "dev:mobile:ip": "MOBILE_API_IP=$(node scripts/get-ip.js | grep 'Your local IP address:' | cut -d' ' -f5) turbo run dev --filter=@aidonic/mobile",
    "build:web": "turbo run build --filter=@aidonic/web",
    "build:mobile": "turbo run build --filter=@aidonic/mobile",
    "test:web": "turbo run test --filter=@aidonic/web",
    "test:mobile": "turbo run test --filter=@aidonic/mobile",
    "lint:web": "turbo run lint --filter=@aidonic/web",
    "lint:mobile": "turbo run lint --filter=@aidonic/mobile",
    "prepare": "husky",
    "type-check:web": "turbo run type-check --filter=@aidonic/web",
    "type-check:mobile": "turbo run type-check --filter=@aidonic/mobile",
    "install:all": "npm install && npm run install:packages && npm run dev:server:install",
    "install:packages": "turbo run install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@aidonic/shared-* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "turbo": "^1.10.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@aidonic/shared-types": "file:./packages/shared-types",
    "@aidonic/shared-utils": "file:./packages/shared-utils",
    "@types/jest": "^30.0.0",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
