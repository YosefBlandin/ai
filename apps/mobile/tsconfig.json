{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@aidonic/shared-types": ["../../packages/shared-types/src"],
      "@aidonic/shared-utils": ["../../packages/shared-utils/src"],
      "@aidonic/shared-services": ["../../packages/shared-services/src"],
      "@aidonic/shared-hooks": ["../../packages/shared-hooks/src"],
      "@aidonic/shared-design-tokens": [
        "../../packages/shared-design-tokens/src"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "../../apps/web/**/*",
    "../../components/**/*",
    "../../containers/**/*",
    "../../services/**/*",
    "../../src/**/*",
    "../../utils/**/*",
    "../../types/**/*",
    "../../styles/**/*",
    "../../features/**/*",
    "../../hooks/**/*",
    "../../mocks/**/*"
  ]
}
